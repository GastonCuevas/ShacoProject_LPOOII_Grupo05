<UserControl x:Class="Vistas.ControlesUsuario.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <Grid Height="122" Width="228" Background="Black">
        <Label Content="Nombre de Usuario: " Height="28" HorizontalAlignment="Left" Margin="6,7,0,0" Name="label1" VerticalAlignment="Top" Style="{StaticResource Txt}" />
        <Label Content="Contraseña: " Height="28" HorizontalAlignment="Left" Margin="6,61,0,0" Name="label2" VerticalAlignment="Top" Style="{StaticResource Txt}" />
        <TextBox Height="28" HorizontalAlignment="Right" Margin="0,26,12,0" Name="txtNombreUsuario" VerticalAlignment="Top" Width="204" Style="{StaticResource TxtEstandar}" />
        <PasswordBox Height="28" HorizontalAlignment="Right" Margin="0,80,12,0" Name="pbContraseña" VerticalAlignment="Top" Width="204" Style="{StaticResource PassEstandar}" />
    </Grid>
</UserControl>
