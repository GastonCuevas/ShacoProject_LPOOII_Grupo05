<Window x:Class="Vistas.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido" Height="300" Width="526">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135*" />
            <RowDefinition Height="126*" />
        </Grid.RowDefinitions>
        <Label Content="Nombre de Usuario: " Height="28" HorizontalAlignment="Left" Margin="32,32,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Contraseña: " Height="28" HorizontalAlignment="Left" Margin="32,82,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="205,36,0,0" Name="txtNombreUsuario" VerticalAlignment="Top" Width="274" />
        <Button Content="Ingresar" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="198,34,0,0" Name="button1" VerticalAlignment="Top" Width="93" Click="button1_Click" />
        <PasswordBox Height="28" HorizontalAlignment="Left" Margin="205,82,0,0" Name="pbContraseña" VerticalAlignment="Top" Width="274" />
    </Grid>
</Window>
