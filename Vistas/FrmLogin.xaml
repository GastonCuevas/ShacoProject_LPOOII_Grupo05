<Window x:Class="Vistas.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlesUsuario"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="" Height="526" Width="340" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="Black" Opacity="0.97" AllowsTransparency="True">
    <Grid Width="Auto" FlowDirection="LeftToRight" Background="{x:Null}">
        <control:Login x:Name="controlLogin" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0" Height="137" Margin="0,191,21,159" Width="229"></control:Login>
        <fa:ImageAwesome Icon="UserCircle" Width="40" Height="40" Foreground="White" Margin="28,211,250,236" VerticalAlignment="Stretch"></fa:ImageAwesome>
        <fa:ImageAwesome Icon="Lock" Width="40" Height="40" Foreground="White" Margin="28,267,250,180"></fa:ImageAwesome>
        <Button Style="{StaticResource BotónAccion}" Content="Ingresar" Height="30" HorizontalAlignment="Center" Margin="61,0,61,50" Name="btnIngresar" VerticalAlignment="Bottom" Width="200" Click="btnIngresar_Click"></Button>
        <CheckBox Content="Recordarme" Height="16" HorizontalAlignment="Stretch" Name="checkBox1" VerticalAlignment="Stretch" Foreground="White" BorderBrush="#FF640000" Background="#FF190000" Margin="102,323,122,148" Style="{StaticResource Check}" Padding="0" />
        <Image Height="139" HorizontalAlignment="Center" Margin="82,56,82,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="155" Source="/Vistas;component/Images/logo.jpg" />
        <Rectangle AllowDrop="False" DataContext="{Binding}" Fill="#FF640000" Height="34" HorizontalAlignment="Center" Margin="0" Name="rectangle1" Stretch="Fill" Stroke="#FF640000" VerticalAlignment="Top" Width="340" />
        <Rectangle Fill="#FF640000" Height="6" HorizontalAlignment="Center" Margin="0" Name="rectangle2" Stroke="#FF640000" VerticalAlignment="Bottom" Width="340" />
        <Ellipse Height="700" HorizontalAlignment="Center" Margin="0" Name="ellipse1" Stroke="#FF640000" StrokeThickness="40" VerticalAlignment="Center" Width="465" />
    </Grid>
</Window>
