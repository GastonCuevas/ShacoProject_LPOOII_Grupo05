<Window x:Class="Vistas.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlesUsuario"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Bienvenido" Height="300" Width="526">
    <Grid>
        <control:Login x:Name="controlLogin" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0" Loaded="controlLogin_Loaded"></control:Login>
        <fa:ImageAwesome Icon="UserCircle" Width="30" Height="30" Margin="24,98,450,133" Foreground="White"></fa:ImageAwesome>
        <fa:ImageAwesome Icon="Lock" Width="30" Height="30" Margin="24,134,450,97" Foreground="White"></fa:ImageAwesome>
        <TextBlock FontSize="36" Foreground="White" FontFamily="Bauhaus 93" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Text="¡Bienvendo a ShacoCinema!"/>
        <Button Style="{StaticResource ResourceKey=btn_plantilla_aceptar}" Content="Ingresar" Height="28" HorizontalAlignment="Left" Margin="201,206,0,0" Name="btnIngresar" VerticalAlignment="Top" Width="93" Click="btnIngresar_Click" Background="White"></Button>
    </Grid>
</Window>
