<Window x:Class="Vistas.FrmButacas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:DATOS="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="FrmButacas" Height="593" Width="937">
    <Window.Resources>
        <ObjectDataProvider
            ObjectType="{x:Type DATOS:TrabajarSala}"
            MethodName="traerSalas"
            x:Key="lista_salas"
           />
    </Window.Resources>
    <Grid Height="542">
        <Label Content="Cantidad de Butacas" Height="28" HorizontalAlignment="Left" Margin="758,12,0,0" Name="label1" VerticalAlignment="Top" />
        <WrapPanel Height="518" HorizontalAlignment="Right" Margin="0,12,195,0" Name="wrpButaca" VerticalAlignment="Top" Width="708" />
        <ComboBox SelectedIndex="0" ItemsSource="{Binding Source={StaticResource lista_salas}}" DisplayMemberPath="SALA_NroSala" SelectedValuePath="SALA_NroSala" Height="23" HorizontalAlignment="Left" Margin="758,46,0,0" Name="cbSala" VerticalAlignment="Top" Width="120" SelectionChanged="cbSala_SelectionChanged"/>
    </Grid>
</Window>
